<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileActivity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout


        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">8

            <ImageView
                android:id="@+id/wzLogo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="false"
                android:cropToPadding="false"
                android:foregroundGravity="center_vertical|clip_horizontal|center"
                android:scaleType="center"
                app:srcCompat="@mipmap/ic_logo_foreground" />

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            android:background="@color/grey_3"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".ui.fragments.HomeFragment">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/grey_3"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/spacer"
                        android:layout_width="425dp"
                        android:layout_height="20dp"
                        android:clickable="false"
                        android:translationY="-5.4dp"
                        app:strokeColor="@color/red"
                        app:strokeWidth="3px" />

                    <TextView
                        android:id="@+id/profile_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:capitalize="words"
                        android:fontFamily="@font/news_cycle_bold"
                        android:shadowColor="#000000"
                        android:shadowDx="100"
                        android:shadowDy="100"
                        android:text="PROFILE"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:id="@+id/fave_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingLeft="50dp"
                        android:paddingRight="50dp">

                        <TextView
                            android:id="@+id/username_text"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:capitalize="words"
                            android:fontFamily="@font/news_cycle_bold"
                            android:shadowColor="#000000"
                            android:shadowDx="100"
                            android:shadowDy="100"
                            android:text="$USER"
                            android:textAlignment="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/red"
                            android:textSize="16dp" />

                        <Button
                            android:id="@+id/faveButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:elevation="@dimen/cardview_compat_inset_shadow"
                            android:fontFamily="@font/news_cycle_bold"
                            android:minHeight="55dp"
                            android:text="ADD TO FAVOURITES"
                            android:textSize="13dp"
                            app:cornerRadius="25px"
                            app:icon="@drawable/ic_fave"
                            app:iconPadding="5dp"
                            app:iconSize="25dp"
                            app:strokeColor="@color/red"
                            app:strokeWidth="5px" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/lifetimeStats_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:capitalize="words"
                        android:fontFamily="@font/news_cycle_bold"
                        android:shadowColor="#000000"
                        android:shadowDx="100"
                        android:shadowDy="100"
                        android:text="LIFETIME STATS"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#FFFFFF"
                        android:textSize="18dp" />

                    <RelativeLayout
                        android:layout_width="380dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/box_kd"
                            android:layout_width="380dp"
                            android:layout_height="100sp"
                            android:background="@drawable/box_legend"
                            android:fontFamily="@font/news_cycle_bold"
                            android:shadowColor="#000000"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="10"
                            android:text="KD"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/box_test"
                            android:layout_width="140dp"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/box_plate"
                            android:fontFamily="@font/news_cycle_bold"
                            android:shadowColor="@color/grey_0"
                            android:shadowDx="1"
                            android:shadowDy=""
                            android:shadowRadius="10"
                            android:text="$KD"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@color/material_on_surface_emphasis_medium"
                            android:textSize="27dp" />

                        <TextView
                            android:id="@+id/box_league1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:fontFamily="@font/news_cycle_bold"
                            android:paddingBottom="4dp"
                            android:shadowColor="#000000"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="10"
                            android:text="$LEAGUE"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="#FFFFFF"
                            android:textSize="12dp" />

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/league_box_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingLeft="16dp"
                        android:paddingTop="5dp"
                        android:paddingRight="16dp">

                        <TextView
                            android:id="@+id/box_wins"
                            android:layout_width="380dp"
                            android:layout_height="100sp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/box_gold"
                            android:fontFamily="@font/news_cycle_bold"
                            android:shadowColor="#000000"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="10"
                            android:text="WINS"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/box_kills"
                            android:layout_width="380dp"
                            android:layout_height="100sp"
                            android:layout_weight="1"
                            android:background="@drawable/box_master"
                            android:fontFamily="@font/news_cycle_bold"
                            android:shadowColor="#000000"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="10"
                            android:text="KILLS"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="#FFFFFF" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/league_box_layout2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingLeft="16dp"
                        android:paddingTop="5dp"
                        android:paddingRight="16dp">

                        <TextView
                            android:id="@+id/box_winrate"
                            android:layout_width="380dp"
                            android:layout_height="100sp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/box_bronze"
                            android:fontFamily="@font/news_cycle_bold"
                            android:shadowColor="#000000"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="10"
                            android:text="WIN %"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/box_killsPerGame"
                            android:layout_width="380dp"
                            android:layout_height="100sp"
                            android:layout_weight="1"
                            android:background="@drawable/box_silver"
                            android:fontFamily="@font/news_cycle_bold"
                            android:shadowColor="#000000"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="10"
                            android:text="KILLS / GAME"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="#FFFFFF" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/weeklyStatsText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:capitalize="words"
                        android:fontFamily="@font/news_cycle_bold"
                        android:shadowColor="#000000"
                        android:shadowDx="100"
                        android:shadowDy="100"
                        android:text="WEEKLY STATS"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#FFFFFF"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/matchCount_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:capitalize="words"
                        android:fontFamily="@font/news_cycle_bold"
                        android:shadowColor="#000000"
                        android:shadowDx="100"
                        android:shadowDy="100"
                        android:text="$MATCHES "
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/red"
                        android:textSize="14dp" />

                    <LinearLayout
                        android:id="@+id/weeklyStats_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingLeft="16dp"
                        android:paddingTop="5dp"
                        android:paddingRight="16dp">

                        <TextView
                            android:id="@+id/box_weekly_wins"
                            android:layout_width="380dp"
                            android:layout_height="100sp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/box_grey"
                            android:fontFamily="@font/news_cycle_bold"
                            android:shadowColor="#000000"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="10"
                            android:text="KD"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/box_weekly_killsPerGame"
                            android:layout_width="380dp"
                            android:layout_height="100dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/box_grey"
                            android:fontFamily="@font/news_cycle_bold"
                            android:shadowColor="#000000"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="10"
                            android:text="KILLS / GAME"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/box_weekly_kills"
                            android:layout_width="380dp"
                            android:layout_height="100sp"
                            android:layout_weight="1"
                            android:background="@drawable/box_grey"
                            android:fontFamily="@font/news_cycle_bold"
                            android:shadowColor="#000000"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="10"
                            android:text="KILLS"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="#FFFFFF" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/weeklyStatsText3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:capitalize="words"
                        android:fontFamily="@font/news_cycle_bold"
                        android:shadowColor="#000000"
                        android:shadowDx="100"
                        android:shadowDy="100"
                        android:text="RECENT GAMES - LEAGUE DISTRIBUTION"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#FFFFFF"
                        android:textSize="18dp" />

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_battle"></ImageView>

                </LinearLayout>
            </ScrollView>

        </androidx.core.widget.NestedScrollView>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>